<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp"
    >
	<ImageView android:id="@+id/item_icon"
	    android:src="@drawable/icon"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginTop="5dp"
	    android:layout_marginRight="5dp"/>
	<FrameLayout android:id="@+id/item_recorder_length"
	    android:layout_toLeftOf="@+id/item_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:background="@drawable/chatto_bg_focused">
	    <View android:id="@+id/id_recorder_anim"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_vertical|right"
	        android:background="@drawable/adj"/>
	</FrameLayout>
	<TextView android:id="@+id/id_recorder_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_marginRight="3dp"
	    android:layout_toLeftOf="@+id/item_recorder_length"
	    android:text=""
	    android:textColor="#ff777777"/>
</RelativeLayout>